{
	"schemaVersion": 1,
	"id": "letterboxing",
	"version": "${version}",
	"name": "Letterboxing",
	"description": "A mod that adds customizable letter- and pillarboxing for more immersive gameplay.",
	"authors": [
		"CopyTheNerd"
	],
	"contact": {
		"homepage": "https://github.com/copythenerd",
        "sources": "https://github.com/copythenerd/Letterboxing",
        "issues": "https://github.com/copythenerd/Letterboxing/issues"
	},
	"license": "MIT",
	"icon": "assets/letterboxing/icon.png",
