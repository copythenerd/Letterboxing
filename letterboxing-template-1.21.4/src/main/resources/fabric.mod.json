		],
		"fabric-datagen": [
			"com.copythenerd.letterboxing.LetterboxingDataGenerator"
		],
		"client": [
			"com.copythenerd.letterboxing.LetterboxingClient"
		],
		"modmenu": [
			"com.copythenerd.letterboxing.config.ModMenuApiImpl"
		]
	},
	"mixins": [
		"letterboxing.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.16.13",
		"minecraft": "~1.21.4",
		"java": ">=21",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
